@page "/users/{Id}/update"

@inject AuthState AuthState
@inject MessageService MessageService
@inject IUserService UserService
@inject NavigationManager Nav

@if (!_checked)
{
    <div class="page-head page-head-center">
        <h1 class="page-title">Načítám...</h1>
        <p class="page-subtitle muted">Chvilku strpení.</p>
    </div>
}
else
{
    <div class="profile-wrap">
        <div class="page-head page-head-center">
            <h1 class="page-title">Úprava účtu</h1>
            <p class="page-subtitle muted">Osobní údaje uživatele</p>
        </div>

        <div class="card card-md">
            @if (isLoading)
            {
                <div class="muted center">Načítám účet...</div>
            }
            else
            {
                <EditForm Model="request" OnValidSubmit="HandleUpdateAsync">
                    <DataAnnotationsValidator />

                    <div class="field">
                        <label class="label" for="firstName">Jméno</label>
                        <InputText id="firstName" class="input" @bind-Value="request.FirstName" />
                        <ValidationMessage For="@(() => request.FirstName)" class="field-error" />
                    </div>

                    <div class="field">
                        <label class="label" for="lastName">Příjmení</label>
                        <InputText id="lastName" class="input" @bind-Value="request.LastName" />
                        <ValidationMessage For="@(() => request.LastName)" class="field-error" />
                    </div>

                    <div class="field">
                        <label class="label" for="phone">Telefon</label>
                        <InputText id="phone" class="input" @bind-Value="request.PhoneNumber" />
                        <ValidationMessage For="@(() => request.PhoneNumber)" class="field-error" />
                    </div>

                    <div class="divider"></div>

                    <div class="row-between" style="margin:0;">
                        <div style="display:flex; gap:10px; flex-wrap:wrap;">
                            <a class="btn btn-outline" href="@($"/users/{Id}")">Zpět na detail</a>
                            <a class="btn btn-link" href="/users/list">Zpět na seznam</a>
                        </div>

                        <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                            @(isSubmitting ? "Ukládám..." : "Upravit")
                        </button>
                    </div>
                </EditForm>
            }
        </div>
    </div>
}
@code {
    [Parameter]
    public string Id { get; set; } = default!;

    private UpdateUserRequest request = new();
    private UserDto model = new();

    private bool isLoading;
    private bool loaded;
    private bool isSubmitting;
    private bool _checked;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender || loaded)
            return;

        loaded = true;
        isLoading = true;

        try
        {
            await AuthState.LoadAsync();

            if (!AuthState.IsAuthenticated || !AuthState.Roles.Contains(nameof(UserRoles.Admin)))
            {
                isLoading = false;
                _checked = true;
                await InvokeAsync(StateHasChanged);
                Nav.NavigateTo("/", replace: true);
                return;
            }

            model = await UserService.GetByIdAsync(Id, CancellationToken.None);

            request.FirstName = model.FirstName;
            request.LastName = model.LastName;
            request.PhoneNumber = model.PhoneNumber;
        }
        catch (ApiRequestException ex)
        {
            MessageService.ShowError(ex.Message);
        }
        finally
        {
            isLoading = false;
            _checked = true;
            await InvokeAsync(StateHasChanged);
        }
    }

    private async Task HandleUpdateAsync()
    {
        if (isSubmitting)
            return;

        isSubmitting = true;

        try
        {
            await UserService.UpdateUserAsync(Id, request, CancellationToken.None);
            MessageService.ShowSuccess("Účet úspěšně upraven.");
            Nav.NavigateTo("/users/list", replace: true);
        }
        catch (ApiRequestException ex)
        {
            MessageService.ShowError(ex.Message);
        }
        finally
        {
            isSubmitting = false;
            await InvokeAsync(StateHasChanged);
        }
    }
}
