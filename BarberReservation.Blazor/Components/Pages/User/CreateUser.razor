@page "/users/create"

<PageTitle>Vytvoření uživatele</PageTitle>

@inject IUserService UserService
@inject NavigationManager Nav
@inject AuthState AuthState
@inject MessageService MessageService

@if (!_checked)
{
    <div class="page-head page-head-center">
        <h1 class="page-title">Načítám...</h1>
        <p class="page-subtitle muted">Chvilku strpení.</p>
    </div>
}
else if (!redirecting)
{
    <div class="page-head page-head-center">
        <h1 class="page-title">Vytvoření uživatele</h1>
        <p class="page-subtitle muted">Založení účtu zákazníka / kadeřníka.</p>
    </div>

    <div class="stack-top">
        <div class="card card-md">
            <EditForm Model="request" OnValidSubmit="HandleCreateUserAsync">
                <DataAnnotationsValidator />

                <div class="field">
                    <label class="label" for="firstName">Jméno</label>
                    <InputText id="firstName"
                               class="input"
                               @bind-Value="request.FirstName"
                               autocomplete="given-name"
                               placeholder="Jan" />
                    <ValidationMessage For="@(() => request.FirstName)" class="field-error" />
                </div>

                <div class="field">
                    <label class="label" for="lastName">Příjmení</label>
                    <InputText id="lastName"
                               class="input"
                               @bind-Value="request.LastName"
                               autocomplete="family-name"
                               placeholder="Novák" />
                    <ValidationMessage For="@(() => request.LastName)" class="field-error" />
                </div>

                <div class="field">
                    <label class="label" for="email">E-mail</label>
                    <InputText id="email"
                               class="input"
                               @bind-Value="request.Email"
                               autocomplete="username"
                               inputmode="email"
                               placeholder="name@domain.com" />
                    <ValidationMessage For="@(() => request.Email)" class="field-error" />
                </div>

                <div class="field">
                    <label class="label" for="phone">Telefon</label>
                    <InputText id="phone"
                               class="input"
                               @bind-Value="request.PhoneNumber"
                               autocomplete="tel"
                               inputmode="tel"
                               placeholder="+420123456789" />
                    <ValidationMessage For="@(() => request.PhoneNumber)" class="field-error" />
                </div>

                <div class="field">
                    <label class="label" for="role">Role</label>
                    <InputSelect id="role" class="input" @bind-Value="request.Role">
                        <option value="">— vyberte roli —</option>
                        @foreach (var opt in Helper.RoleOptions)
                        {
                            if (opt.Value != nameof(UserRoles.Admin))
                            {
                                <option value="@opt.Value">@opt.Text</option>
                            }
                        }
                    </InputSelect>
                    <ValidationMessage For="@(() => request.Role)" class="field-error" />
                </div>

                <div class="row-between" style="margin:0;">
                    <a class="btn btn-outline" href="/users/list">
                        Zpět na seznam
                    </a>

                    <button class="btn btn-primary" type="submit" disabled="@isSubmitting">
                        @(isSubmitting ? "Vytvářím..." : "Vytvořit")
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
}

@code {
    private CreateUserRequest request = new();
    private bool isSubmitting;
    private bool _checked;
    private bool loaded;
    private bool redirecting;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender || loaded)
            return;

        loaded = true;

        if (!AuthState.IsAuthenticated || !AuthState.Roles.Contains(nameof(UserRoles.Admin)))
        {
            redirecting = true;
            _checked = true;
            await InvokeAsync(StateHasChanged);
            Nav.NavigateTo("/", replace: true);
            return;
        }

        _checked = true;
        await InvokeAsync(StateHasChanged);
    }

    private async Task HandleCreateUserAsync()
    {
        if (isSubmitting)
            return;

        isSubmitting = true;

        try
        {
            await UserService.CreateAsync(request, CancellationToken.None);
            MessageService.ShowSuccess("Uživatel byl vytvořen. Byl mu odeslán e-mail pro nastavení hesla.");
            Nav.NavigateTo("/users/list", replace: true);
        }
        catch (ApiRequestException ex)
        {
            MessageService.ShowError(ex.Message);
        }
        finally
        {
            isSubmitting = false;
            await InvokeAsync(StateHasChanged);
        }
    }
}