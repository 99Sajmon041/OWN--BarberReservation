@page "/users/{Id}"

@inject AuthState AuthState
@inject IUserService UserService
@inject MessageService MessageService
@inject IJSRuntime JS
@inject NavigationManager Nav

@if (!_checked)
{
    <div class="page-head page-head-center">
        <h1 class="page-title">Načítám...</h1>
        <p class="page-subtitle muted">Chvilku strpení.</p>
    </div>
}
else
{
    <div class="profile-wrap">
        <div class="page-head page-head-center">
            <h1 class="page-title">Detail uživatele - @model.FirstName @model.LastName</h1>
            <p class="page-subtitle muted">Osobní údaje</p>
        </div>

        <div class="card card-md">
            @if (isLoading)
            {
                <div class="muted center">Načítám uživatele...</div>
            }
            else
            {
                <div class="field">
                    <label class="label">Jméno</label>
                    <div class="input input-readonly">
                        @model.FirstName @model.LastName
                    </div>
                </div>

                <div class="field">
                    <label class="label">E-mail</label>
                    <div class="input input-readonly">
                        @model.Email
                    </div>
                </div>

                <div class="field">
                    <label class="label">Telefon</label>
                    <div class="input input-readonly">
                        @(string.IsNullOrWhiteSpace(model.PhoneNumber) ? "—" : model.PhoneNumber)
                    </div>
                </div>

                <div class="field">
                    <label class="label">Role</label>
                    <div class="input input-readonly text-muted">
                        @Roles
                    </div>
                </div>

                <div class="field">
                    <label class="label">Stav účtu</label>
                    <div class="input input-readonly">
                        @(model.IsActive ? "Aktivní" : "Deaktivovaný")
                    </div>
                </div>

                <div class="divider"></div>

                <div class="detail-actions">
                    <a class="btn btn-outline" href="/users/list">
                        Zpět na seznam
                    </a>

                    <a class="btn btn-outline" href="@($"/users/{model.Id}/update")">
                        Upravit účet
                    </a>

                    <button type="button" class="btn btn-outline" @onclick="OpenEmailModal">
                        Upravit e-mail
                    </button>

                    @if (model.Roles.Contains(nameof(UserRoles.Admin)))
                    {
                        <a class="btn btn-outline" href="@($"/reservations/list?hairdresserId={model.Id}")">
                            Zobrazit rezervace
                        </a>
                    }
                    else if (model.Roles.Contains(nameof(UserRoles.Customer)))
                    {
                        <a class="btn btn-outline" href="@($"/reservations/list?customerId={model.Id}")">
                            Zobrazit rezervace
                        </a>
                    }
                    else
                    {
                        <a class="btn btn-outline" href="@($"/reservations/list?hairdresserId={model.Id}")">
                            Zobrazit rezervace
                        </a>
                    }

                    @if (model.Roles.Contains(nameof(UserRoles.Admin)) || model.Roles.Contains(nameof(UserRoles.Hairdresser)))
                    {
                        <a class="btn btn-outline" href="@($"/hairdresser-services/list?hairdresserId={model.Id}")">
                            Zobrazit Služby
                        </a>
                    }

                    @if (model.IsActive)
                    {
                        <button class="btn btn-danger" @onclick="() => DeactivateAsync(model.Id)" disabled="@isLoading">
                            Deaktivovat účet
                        </button>
                    }
                    else
                    {
                        <button class="btn btn-success" @onclick="() => ActivateAsync(model.Id)" disabled="@isLoading">
                            Aktivovat účet
                        </button>
                    }
                </div>
            }
        </div>
    </div>
}


<UiModal @bind-Open="showEmailModal"
         Title="Upravit e-mail"
         Subtitle="@($"Uživatel: {model.FirstName} {model.LastName}")">

    <EditForm Model="emailRequest" OnValidSubmit="SubmitEmailAsync">
        <DataAnnotationsValidator />

        @if (!string.IsNullOrWhiteSpace(emailError))
        {
            <div class="ui-msg ui-msg-danger" style="margin-bottom:12px;">
                <div class="ui-msg-text">@emailError</div>
                <button type="button" class="ui-msg-close" @onclick="() => emailError = null" aria-label="Zavřít">×</button>
            </div>
        }

        <div class="field">
            <label class="label" for="newEmail">Nový e-mail</label>
            <InputText id="newEmail" class="input" @bind-Value="emailRequest.Email" />
            <ValidationMessage For="@(() => emailRequest.Email)" class="field-error" />
        </div>

        <div class="row-between" style="margin:0;">
            <button type="button" class="btn btn-outline" @onclick="() => showEmailModal = false" disabled="@emailSubmitting">
                Zrušit
            </button>

            <button type="submit" class="btn btn-primary" disabled="@emailSubmitting">
                @(emailSubmitting ? "Ukládám..." : "Uložit")
            </button>
        </div>
    </EditForm>

</UiModal>


@code {
    [Parameter] 
    public string Id { get; set; } = default!;

    private UserDto model = new();

    private bool isLoading;
    private bool loaded;
    private bool _checked;

    private bool showEmailModal;
    private bool emailSubmitting;
    private string? emailError;
    private UpdateUserEmailRequest emailRequest = new();

    protected override async Task OnAfterRenderAsync(bool firstrender)
    {
        if (!firstrender || loaded)
            return;

        loaded = true;
        isLoading = true;

        try
        {
            await AuthState.LoadAsync();

            if (!AuthState.IsAuthenticated)
            {
                StateHasChanged();
                Nav.NavigateTo("/", replace: true);
                return;
            }

            model = await UserService.GetByIdAsync(Id, CancellationToken.None);
        }
        catch(ApiRequestException ex)
        {
            MessageService.ShowError(ex.Message);
        }
        finally
        {
            isLoading = false;
            _checked = true;
            await InvokeAsync(StateHasChanged);
        }
    }

    private async Task DeactivateAsync(string id)
    {
        var ok = await JS.ConfirmAction($"Opravdu chcete uživatele s ID: {id} deaktivovat ?");
        if (!ok)
            return;

        try
        {
            await UserService.DeactivateByIdAsync(id, CancellationToken.None);
            MessageService.ShowSuccess("Uživatel byl úspěšně deaktivován.");
            Nav.NavigateTo("/users/list", replace: true);
        }
        catch(ApiRequestException ex)
        {
            MessageService.ShowError(ex.Message);
        }
    }

    private async Task ActivateAsync(string id)
    {
        var ok = await JS.ConfirmAction($"Opravdu chcete uživatele s ID: {id} aktivovat ?");
        if (!ok)
            return;

        try
        {
            await UserService.ActivateByIdAsync(id, CancellationToken.None);
            MessageService.ShowSuccess("Uživatel byl úspěšně aktivován.");
            Nav.NavigateTo("/users/list", replace: true);
        }
        catch (ApiRequestException ex)
        {
            MessageService.ShowError(ex.Message);
        }
    }

    private void OpenEmailModal()
    {
        emailError = null;
        emailRequest = new UpdateUserEmailRequest { Email = model.Email };
        showEmailModal = true;
    }

    private void CloseEmailModal()
    {
        showEmailModal = false;
        emailSubmitting = false;
    }

    private async Task SubmitEmailAsync()
    {
        emailSubmitting = true;
        emailError = null;

        try
        {
            await UserService.UpdateEmailAsync(model.Id, emailRequest, CancellationToken.None);
            model.Email = emailRequest.Email.Trim();
            MessageService.ShowSuccess("E-mail byl úspěšně upraven.");
            showEmailModal = false;
        }
        catch (ApiRequestException ex)
        {
            emailError = ex.Message;
        }
        finally
        {
            emailSubmitting = false;
            await InvokeAsync(StateHasChanged);
        }
    }

