@page "/profile"

<PageTitle>Profil</PageTitle>

@inject AuthState AuthState
@inject IAuthService AuthService
@inject MessageService MessageService
@inject IMeService MeService
@inject NavigationManager Nav
@inject IJSRuntime JS

@if (!_checked)
{
    <div class="page-head page-head-center">
        <h1 class="page-title">Načítám...</h1>
        <p class="page-subtitle muted">Chvilku strpení.</p>
    </div>
}
else
{
    <div class="profile-wrap">
        <div class="page-head page-head-center">
            <h1 class="page-title">Profil</h1>
            <p class="page-subtitle muted">Tvé osobní údaje</p>
        </div>

        <div class="card card-md">
            @if (isLoading)
            {
                <div class="muted center">Načítám profil...</div>
            }
            else
            {
                <div class="field">
                    <label class="label">Jméno</label>
                    <div class="input input-readonly">
                        @model.FirstName @model.LastName
                    </div>
                </div>

                <div class="field">
                    <label class="label">E-mail</label>
                    <div class="input input-readonly">
                        @model.Email
                    </div>
                </div>

                <div class="field">
                    <label class="label">Telefon</label>
                    <div class="input input-readonly">
                        @(string.IsNullOrWhiteSpace(model.PhoneNumber) ? "—" : model.PhoneNumber)
                    </div>
                </div>

                <div class="field">
                    <label class="label">Stav účtu</label>
                    <div class="input input-readonly">
                        @(model.IsActive ? "Aktivní" : "Deaktivovaný")
                    </div>
                </div>

                <div class="divider"></div>

                <div style="display:flex; gap:10px; flex-wrap:wrap; margin:0;">
                    <a class="btn btn-outline" href="/">Domů</a>
                    <a class="btn btn-primary" href="/profile/update">Upravit profil</a>
                    <a class="btn btn-primary" href="/change-password">Změnit heslo</a>
                </div>

                @if (AuthState.Roles.Contains(nameof(UserRoles.Customer)))
                {
                    <div class="divider"></div>

                    <div style="display:flex; justify-content:center; margin:0;">
                        <button type="button"
                                class="btn btn-danger"
                                @onclick="DeactivateAsync"
                                disabled="@isSubmitting"
                                style="white-space:nowrap;">
                            @(isSubmitting ? "Provádím..." : "Deaktivovat účet")
                        </button>
                    </div>
                }
            }
        </div>
    </div>
}


@code {
    private UserDto model = new();

    private bool isSubmitting;
    private bool isLoading;
    private bool loaded;
    private bool _checked;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender || loaded)
            return;

        loaded = true;
        isLoading = true;

        try
        {
            await AuthState.LoadAsync();

            if (!AuthState.IsAuthenticated)
            {
                StateHasChanged();
                Nav.NavigateTo("/login", replace: true);
                return;
            }

            model = await MeService.GetProfileAsync(CancellationToken.None);
        }
        catch (ApiRequestException ex)
        {
            MessageService.ShowError(ex.Message);
        }
        finally
        {
            isLoading = false;
            _checked = true;
            await InvokeAsync(StateHasChanged);
        }
    }

    private async Task DeactivateAsync()
    {
        if (isSubmitting)
            return;

        var ok = await JS.ConfirmAction("Opravdu si přejete deaktivovat svůj účet ?");
        if (!ok)
            return;

        isSubmitting = true;

        try
        {
            await MeService.DeactivateAccountAsync(CancellationToken.None);
            await AuthService.LogoutAsync();
            MessageService.ShowWarning("Váš účet byl deaktivován. Pro jeho obnovení kontaktujte podporu.");
            Nav.NavigateTo("/", replace: true);
        }
        catch (ApiRequestException ex)
        {
            MessageService.ShowError(ex.Message);
        }
        finally
        {
            isSubmitting = false;
            await InvokeAsync(StateHasChanged);
        }
    }
}
