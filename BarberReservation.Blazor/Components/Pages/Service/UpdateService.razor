@page "/services/{id:int}/update"

<PageTitle>Úprava služby</PageTitle>

@inject AuthState AuthState
@inject MessageService MessageService
@inject IService Service
@inject NavigationManager Nav

@if (!_checked)
{
    <div class="page-head page-head-center">
        <h1 class="page-title">Načítám...</h1>
        <p class="page-subtitle muted">Chvilku strpení.</p>
    </div>
}
else
{
    <div class="profile-wrap">
        <div class="page-head page-head-center">
            <h1 class="page-title">Úprava služby</h1>
            <p class="page-subtitle muted">Parametry služby</p>
        </div>

        <div class="card card-md">
            @if (isLoading)
            {
                <div class="muted center">Načítám službu...</div>
            }
            else
            {
                <EditForm Model="request" OnValidSubmit="HandleUpdateAsync">
                    <DataAnnotationsValidator />

                    <div class="field">
                        <label class="label" for="id">ID</label>
                        <input id="id" class="input" readonly value="@model.Id" />
                    </div>

                    <div class="field">
                        <label class="label" for="name">Název</label>
                        <InputText id="name" class="input" @bind-Value="request.Name" />
                        <ValidationMessage For="@(() => request.Name)" class="field-error" />
                    </div>

                    <div class="field">
                        <label class="label" for="description">Popis</label>
                        <InputText id="description" class="input" @bind-Value="request.Description" />
                        <ValidationMessage For="@(() => request.Description)" class="field-error" />
                    </div>

                    <div class="divider"></div>

                    <div class="row-between" style="margin:0;">
                        <div style="display:flex; gap:10px; flex-wrap:wrap;">
                            <a class="btn btn-outline" href="@($"/services/{Id}")">Zpět na detail</a>
                            <a class="btn btn-link" href="/services/list">Zpět na seznam</a>
                        </div>

                        <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                            @(isSubmitting ? "Ukládám..." : "Upravit")
                        </button>
                    </div>
                </EditForm>
            }
        </div>
    </div>
}

@code {
    [Parameter]
    public int Id { get; set; }

    private UpsertServiceRequest request = new();
    private ServiceDto model = new();

    private bool isLoading;
    private bool isSubmitting;
    private bool _checked;
    private bool loaded;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender || loaded)
            return;

        loaded = true;
        isLoading = true;

        await AuthState.LoadAsync();

        if (!AuthState.IsAuthenticated || !AuthState.Roles.Contains(nameof(UserRoles.Admin)))
        {
            isLoading = false;
            _checked = true;
            await InvokeAsync(StateHasChanged);
            Nav.NavigateTo("/", replace: true);
            return;
        }

        try
        {
            model = await Service.GetByIdAsync(Id, CancellationToken.None);
            request.Name = model.Name;
            request.Description = model.Description;
        }
        catch(ApiRequestException ex)
        {
            MessageService.ShowError(ex.Message);
        }
        finally
        {
            isLoading = false;
            _checked = true;
            await InvokeAsync(StateHasChanged);
        }
    }

    private async Task HandleUpdateAsync()
    {
        if (isSubmitting)
            return;

        isSubmitting = true;

        try
        {
            await Service.UpdateAsync(Id, request, CancellationToken.None);
            MessageService.ShowSuccess("Služba byla úspěšně upravena.");
            Nav.NavigateTo($"/services/{Id}", replace: true);
        }
        catch(ApiRequestException ex)
        {
            MessageService.ShowError(ex.Message);
        }
        finally
        {
            isSubmitting = false;
            await InvokeAsync(StateHasChanged);
        }
    }
}
