@page "/forgot-password"

<PageTitle>Zapomenuté heslo</PageTitle>

@inject MessageService MessageService
@inject IAuthService AuthService
@inject AuthState AuthState
@inject NavigationManager Nav

@if (!_checked)
{
    <div class="page-head page-head-center">
        <h1 class="page-title">Načítám...</h1>
        <p class="page-subtitle muted">Chvilku strpení.</p>
    </div>
}
else if (!redirecting)
{
    <div class="page-head page-head-center">
        <h1 class="page-title">Zapomenuté heslo</h1>
        <p class="page-subtitle muted">Zadejte e-mail a pošleme vám odkaz pro nastavení hesla.</p>
    </div>

    <div class="stack-top">
        <div class="card card-md">
            <EditForm Model="request" OnValidSubmit="HandleForgottenPasswordAsync">
                <DataAnnotationsValidator />

                <div class="field">
                    <label class="label" for="email">E-mail</label>
                    <InputText id="email"
                               class="input"
                               @bind-Value="request.Email"
                               autocomplete="username"
                               placeholder="name@domain.com" />
                    <ValidationMessage For="@(() => request.Email)" class="field-error" />
                </div>

                <div class="row-between" style="margin:0;">
                    <a class="btn btn-outline" href="/login">
                        Zpět na přihlášení
                    </a>

                    <button class="btn btn-primary" type="submit" disabled="@isSubmitting">
                        @(isSubmitting ? "Odesílám..." : "Odeslat")
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
}

@code {
    private ForgotPasswordRequest request = new();

    private bool isSubmitting;
    private bool redirecting;
    private bool _checked;
    private bool loaded;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender || loaded)
            return;

        loaded = true;

        await AuthState.LoadAsync();

        if (AuthState.IsAuthenticated)
        {
            redirecting = true;
            _checked = true;
            await InvokeAsync(StateHasChanged);
            Nav.NavigateTo("/", replace: true);
            return;
        }

        _checked = true;
        await InvokeAsync(StateHasChanged);
    }

    private async Task HandleForgottenPasswordAsync()
    {
        if (isSubmitting)
            return;

        isSubmitting = true;

        try
        {
            await AuthService.ForgottenPasswordAsync(request, CancellationToken.None);
            MessageService.ShowSuccess("Odeslali jsme Vám e-mail s instrukcemi.");
            Nav.NavigateTo("/login", replace: true);
        }
        catch (ApiRequestException ex)
        {
            MessageService.ShowError(ex.Message);
        }
        finally
        {
            isSubmitting = false;
            await InvokeAsync(StateHasChanged);
        }
    }
}
