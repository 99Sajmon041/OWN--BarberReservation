@inherits LayoutComponentBase
@implements IDisposable
@inject MessageService MessageService
@inject AuthState AuthState
@inject IAuthService AuthService
@inject NavigationManager Nav
@inject AuthenticationStateProvider AuthenticationStateProvider

<div class="app-shell">
    <header class="topbar">
        <div class="container topbar-inner">
            <button class="hamburger" @onclick="() => _mobileMenuOpen = !_mobileMenuOpen" aria-label="Menu">☰</button>

            <a class="brand">
                <span class="brand-dot"></span>
                Barber rezervace
            </a>

            <nav class="nav-links">
                <a class="nav-link" href="/">Domů</a>

                @if (AuthState.Roles.Contains(nameof(UserRoles.Admin)))
                {
                    <a class="nav-link" href="/users/list">Uživatelé</a>
                    <a class="nav-link" href="/services/list">Služby</a>
                }
                @if (AuthState.Roles.Contains(nameof(UserRoles.Admin)) && AuthState.Roles.Contains(nameof(UserRoles.Hairdresser)))
                {
                    <a class="nav-link" href="/hairdresser-services/list">Služby kadeřníků</a>
                }
                @if (AuthState.Roles.Contains(nameof(UserRoles.Hairdresser)) && !AuthState.Roles.Contains(nameof(UserRoles.Admin)))
                {
                    <a class="nav-link" href="/hairdresser-services/list">Moje služby</a>
                }
                @if (AuthState.Roles.Contains(nameof(UserRoles.Hairdresser)) || AuthState.Roles.Contains(nameof(UserRoles.Admin)))
                {
                    <a class="nav-link" href="/working-hours">Pracovní doba</a>

                    <div class="nav-dropdown">
                        <button type="button"
                                class="nav-link nav-dropdown-toggle"
                                @onclick="ToggleTimeOffMenu"
                                @onclick:stopPropagation="true"
                                aria-haspopup="menu"
                                aria-expanded="@_timeOffMenuOpen">
                            Volna
                        </button>

                        @if (_timeOffMenuOpen)
                        {
                            <div class="nav-dropdown-menu" @onclick:stopPropagation="true">
                                <a class="nav-dropdown-item" href="/time-off/list" @onclick="CloseTimeOffMenu">Zobrazit volna</a>
                                <a class="nav-dropdown-item" href="/time-off/detail" @onclick="CloseTimeOffMenu">Vytvořit volno</a>
                            </div>
                        }
                    </div>
                }
            </nav>

            @if (!AuthState.IsAuthenticated)
            {
                <div class="topbar-right">
                    <span class="user-pill muted">Guest</span>
                    <a class="btn btn-link" href="/login">Přihlásit se</a>
                    <a class="btn btn-primary" href="/register">Registrovat</a>
                </div>
            }
            else
            {
                <div class="topbar-right">
                    <div class="topbar-actions">
                        <a class="btn btn-link" href="/profile">Profil</a>
                        <button type="button" class="btn btn-link" @onclick="LogoutAsync">Odhlásit</button>
                    </div>

                    <span class="user-pill">
                        @AuthState.FullName · @AuthState.Role
                    </span>
                </div>
            }
        </div>

        @if (_timeOffMenuOpen && !_mobileMenuOpen)
        {
            <div class="dropdown-backdrop" @onclick="CloseTimeOffMenu"></div>
        }


        @if (_mobileMenuOpen)
        {
            <div class="mobile-overlay" @onclick="CloseMobileMenu">
                <div class="mobile-menu container" @onclick:stopPropagation="true">
                    <a class="mobile-link" href="/" @onclick="CloseMobileMenu">Domů</a>

                    @if (AuthState.Roles.Contains(nameof(UserRoles.Admin)))
                    {
                        <a class="mobile-link" href="/users/list" @onclick="CloseMobileMenu">Uživatelé</a>
                        <a class="mobile-link" href="/services/list" @onclick="CloseMobileMenu">Služby</a>
                    }
                    @if (AuthState.Roles.Contains(nameof(UserRoles.Admin)) && AuthState.Roles.Contains(nameof(UserRoles.Hairdresser)))
                    {
                        <a class="mobile-link" href="/hairdresser-services/list" @onclick="CloseMobileMenu">Služby kadeřníků</a>
                    }
                    @if (AuthState.Roles.Contains(nameof(UserRoles.Hairdresser)) && !AuthState.Roles.Contains(nameof(UserRoles.Admin)))
                    {
                        <a class="mobile-link" href="/hairdresser-services/list" @onclick="CloseMobileMenu">Moje služby</a>
                    }
                    @if (AuthState.Roles.Contains(nameof(UserRoles.Hairdresser)) || AuthState.Roles.Contains(nameof(UserRoles.Admin)))
                    {
                        <a class="mobile-link" href="/working-hours" @onclick="CloseMobileMenu">Pracovní doba</a>

                        <button type="button" class="mobile-link mobile-link-toggle" @onclick="ToggleTimeOffMenu">
                            Volna
                        </button>

                        @if (_timeOffMenuOpen)
                        {
                            <div class="mobile-submenu">
                                <a class="mobile-link" href="/time-off/list" @onclick="CloseMobileMenu">Zobrazit volna</a>
                                <a class="mobile-link" href="/time-off/detail" @onclick="CloseMobileMenu">Vytvořit volno</a>
                            </div>
                        }
                    }
                </div>
            </div>
        }
    </header>

    <main class="content">

        <div class="ui-msg-slot">
            <div class="container">
                @if (MessageService.Current is not null)
                {
                    var css = MessageService.Current.Type switch
                    {
                        MessageType.Success => "ui-msg-success",
                        MessageType.Warning => "ui-msg-warning",
                        MessageType.Error => "ui-msg-danger",
                        _ => "ui-msg-info"
                    };

                    <div class="ui-msg @css" role="alert">
                        <span class="ui-msg-text">@MessageService.Current.Text</span>
                        <button type="button" class="ui-msg-close" @onclick="ClearMessage" aria-label="Zavřít">✕</button>
                    </div>
                }
            </div>
        </div>

        <div class="container">
            <div class="page">
                @Body
            </div>
        </div>

    </main>

    <footer class="footer">
        <div class="container footer-inner">
            <span>© @DateTime.Now.Year Barber rezervace</span>
        </div>
    </footer>
</div>

@code {
    private bool _disposed;
    private bool _mobileMenuOpen;
    private bool _authLoaded;   
    private bool _timeOffMenuOpen;

    private EventHandler<LocationChangedEventArgs>? locationChangedHandler;


    protected override void OnInitialized()
    {
        MessageService.OnChange += OnMessageChanged;
        AuthState.OnChange += OnAuthChanged;

        locationChangedHandler = (_, __) =>
        {
            _mobileMenuOpen = false;
            _timeOffMenuOpen = false;
        };

        Nav.LocationChanged += locationChangedHandler;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender || _authLoaded)
            return;

        _authLoaded = true;

        await AuthState.LoadAsync();
        (AuthenticationStateProvider as ApiAuthenticationStateProvider)?.NotifyUserChanged();

        EnforcePasswordChange();
        await InvokeAsync(StateHasChanged);
    }

    private void OnAuthChanged()
    {
        if (_disposed) return;

        try
        {
            EnforcePasswordChange();
            _ = InvokeAsync(StateHasChanged);
        }
        catch
        {
        }
    }

    private void EnforcePasswordChange()
    {
        if (!AuthState.IsAuthenticated)
            return;

        if (!AuthState.MustChangePassword)
            return;

        var currentPath = Nav.ToBaseRelativePath(Nav.Uri);

        if (currentPath.StartsWith("change-password"))
            return;

        Nav.NavigateTo("/change-password", replace: true);
    }

    private void OnMessageChanged()
    {
        if (_disposed)
            return;
        try 
        { 
            _ = InvokeAsync(StateHasChanged); 
        }
        catch
        {            
        }
    }

    private async Task LogoutAsync()
    {
        await AuthService.LogoutAsync();
        Nav.NavigateTo("/", replace: true);
    }

    public void Dispose()
    {
        _disposed = true;

        MessageService.OnChange -= OnMessageChanged;
        AuthState.OnChange -= OnAuthChanged;

        if (locationChangedHandler is not null)
            Nav.LocationChanged -= locationChangedHandler;
    }

    private void ClearMessage() => MessageService.Clear();

    private void ToggleTimeOffMenu() => _timeOffMenuOpen = !_timeOffMenuOpen;

    private void CloseTimeOffMenu() => _timeOffMenuOpen = false;

    private void CloseMobileMenu()
    {
        _mobileMenuOpen = false;
        _timeOffMenuOpen = false;
    }
}
